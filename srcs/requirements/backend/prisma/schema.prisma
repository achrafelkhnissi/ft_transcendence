model FriendRequest {
  friendshipStatus FriendshipStatus @default(PENDING)
  senderId         Int
  user             User             @relation("SentFriendRequests", fields: [senderId], references: [id], onDelete: Cascade)
  receiverId       Int
  friend           User             @relation("ReceivedFriendRequests", fields: [receiverId], references: [id], onDelete: Cascade)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  @@id([senderId, receiverId])
  @@unique([senderId, receiverId])
}

