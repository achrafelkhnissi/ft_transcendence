enum Status {
  ONLINE
  OFFLINE
  IDLE
  DONOTDISTURB
  INVISIBLE
  INGAME
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  DECLINED
  BLOCKED
}

enum GameStatus {
  PENDING
  INPROGRESS
  FINISHED
}

enum MatchStatus {
  PENDING
  INPROGRESS
  FINISHED
}

enum ChannelType {
  PUBLIC
  PRIVATE
}

enum NotificationType {
  FRIEND_REQUEST
  MATCH
  MESSAGE
  OTHER
}

enum Rank {
  UNRANKED
  BRONZE
  SILVER
  GOLD
  PLATINUM
  DIAMOND
  MASTER
  GRANDMASTER
}

enum Role {
  USER
  ADMIN
}

enum inviteType {
